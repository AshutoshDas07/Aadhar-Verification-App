<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/status_icon"
            android:background="@drawable/correct_img"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="100dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
        <TextView
            android:id="@+id/status"
            android:layout_below="@+id/status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="status"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textStyle="bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_container"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/age_set"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#DFD8D8"
                android:text="Age"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/age_container"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Age"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="#DFD8D8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/gender_set"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="#DFD8D8"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/gender_container"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Gender"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="#DFD8D8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/mobile_set"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="#DFD8D8"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/mobile_container"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Mobile"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="#DFD8D8" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>